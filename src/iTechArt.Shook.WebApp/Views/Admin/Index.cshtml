@model System.Collections.Generic.IReadOnlyCollection<iTechArt.Shook.WebApp.ViewModels.UserViewModel>

<div class="container text-center p-2">
    
    <div class="form-group row mb-3">
        <label class="col-sm-2 col-form-label">Users</label>
        <div class="col-sm-5 align-items-md-end">
            <input type="text" class="form-control" id="inputPassword" placeholder="search">
        </div>
    </div>

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        @if (Model.Count > 0)
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        @for (int i = 0; i < user.Roles.Count(); i++)
                        {
                            @if (i == (user.Roles.Count() - 1))
                            {
                                @user.Roles[i]
                            }
                            else
                            {
                                @user.Roles[i]
                                <text> | </text>
                            }
                        }
                    </td>
                    <td>
                        <a>Remove</a>
                        <text> | </text>
                        <a>Update</a>
                        <text> | </text>
                        <a>Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No users created yet.</td>
            </tr>
        }
    </table>
</div>