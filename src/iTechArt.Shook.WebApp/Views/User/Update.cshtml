@model iTechArt.Shook.WebApp.ViewModels.UpdateUserViewModel

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete User?</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row ml-2">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-controller="User" asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>