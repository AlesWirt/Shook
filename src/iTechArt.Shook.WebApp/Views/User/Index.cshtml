@model System.Collections.Generic.IReadOnlyCollection<iTechArt.Shook.WebApp.ViewModels.UserViewModel>

<div class="container text-center p-2">
    
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        @if (Model.Count > 0)
        {
            @foreach (var vm in Model)
            {
                <tr>
                    <td>@vm.User.UserName</td>
                    <td>
                        @foreach (var role in vm.Roles)
                        {
                            <text> | </text>
                            @role.Name
                            <text> | </text>
                        }
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="Delete" asp-route-UserName="@vm.User.UserName">Delete</a>
                        <text> | </text>
                        <a>Update</a>
                        <text> | </text>
                        <a>Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No users created yet.</td>
            </tr>
        }
    </table>
</div>