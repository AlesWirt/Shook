@model iTechArt.Shook.DomainModel.Models.User
@inject Microsoft.AspNetCore.Identity.SignInManager<iTechArt.Shook.DomainModel.Models.User> signInManager

@if (await signInManager.UserManager.IsInRoleAsync(Model, iTechArt.Shook.DomainModel.RoleNames.Admin)) 
{ 
    <div class="container text-center pt-5">
        <h1 class="display-4">You can not delete our beloved admin. <a asp-controller="User" asp-action="Index">Go away!</a></h1>
    </div>
}
else
{
    <form method="post" asp-action="DeletePost">
        <input asp-for="UserName" hidden />
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Delete User</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="UserName"></label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <input asp-for="UserName" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-danger w-75" value="Delete" />
                            </div>
                            <div class="col">
                                <a asp-controller="User" asp-action="Index" class="btn btn-success w-75">Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
}