@model System.Collections.Generic.IReadOnlyCollection<iTechArt.Shook.DomainModel.Models.User>

<h5 class="bg-primary text-white text-center m-2 p-2">iTechArt</h5>
<div class="text-center p-2">
    <h2>Here is a list of registered names in project</h2>
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr><th>Name</th></tr>
        </thead>
        @if (Model.Count > 0)
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No users created yet.</td>
            </tr>
        }
    </table>

</div>