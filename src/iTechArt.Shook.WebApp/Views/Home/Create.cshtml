@model iTechArt.Shook.WebApp.ViewModels.RegisterViewModel

<form class="needs-validation" method="post" asp-action="Create" asp-controller="Home" novalidate>
    <hr />
    <div class="container col-md-4 mb-3">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" />
            <small class="form-text text-muted">Allowed number of characters: 16.</small>
        </div>
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
</form>