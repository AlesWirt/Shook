@model iTechArt.Shook.WebApp.ViewModels.LogInViewModel

<div class="align-items-center h-100 pt-5">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-11 col-lg-7 col-xl-6">
                <div class="card">
                    <div class="card-body p-5">

                        <h2 class="text-uppercase text-center mb-5">Enter to your account</h2>

                        <form class="needs-validation" method="post" asp-action="SignIn" asp-controller="SignIn" novalidate>

                            @*<div asp-validation-summary="All"></div>*@

                            <div class="form-group row mb-4">
                                <label class="col-md-2" asp-for="UserName"></label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" asp-for="UserName" />
                                    <small class="form-text text-muted">Allowed number of characters: 16.</small>
                                </div>
                            </div>
                            
                            <div class="form-group row mb-4">
                                <label class="col-md-2" asp-for="Password"></label>
                                <div class="col-md-6">
                                    <input type="password" id="password" asp-for="Password" class="form-control"/>
                                    <input type="checkbox" id="toggle-password"/> Show/Hide
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-6 offset-md-3">
                                    <input type="submit" value="Sign In" class="btn btn-success" />
                                    <a class="col-md-10 offset-md-2" asp-controller="Register" asp-action="Register">Register</a>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScripts" />
    <partial name="_ShowHidePassword"/>
}