@model iTechArt.Shook.WebApp.ViewModels.LogInViewModel

<div class="align-items-center h-100 pt-5">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-4">
                <div class="card">
                    <div class="card-body p-5">

                        <h2 class="text-uppercase text-center mb-5">Enter account</h2>

                        <form class="needs-validation" method="post" asp-action="SignIn" asp-controller="SignIn" novalidate>

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group row mb-4">
                                <div>
                                    <input type="text" class="form-control" asp-for="UserName" placeholder="Login" />
                                    <small class="form-text text-muted">Allowed number of characters: 16.</small>
                                </div>
                            </div>

                            <div class="form-group row mb-4">
                                <div>
                                    <div class="input-group">
                                        <input id="toggle_fld" type="password" asp-for="Password" class="form-control col-6" placeholder="Password" />
                                        <div class="input-group-append">
                                            <button id="toggle_btn" class="btn btn-outline-secondary" type="button">
                                                <i id="toggle_eye" class="fa-solid fa-eye-slash"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row pl-1 pr-1">
                                <input type="submit" value="SignIn" class="btn btn-success m-1" />
                                <button class="btn btn-secondary m-1" asp-controller="Register" asp-action="Register">Register</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ShowHidePassword" />
}