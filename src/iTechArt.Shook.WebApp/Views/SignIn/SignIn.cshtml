@model iTechArt.Shook.WebApp.ViewModels.SignInViewModel

<div class="align-items-center h-100 pt-5">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-11 col-lg-7 col-xl-6">
                <div class="card">
                    <div class="card-body p-5">

                        <h2 class="text-uppercase text-center mb-5">Enter to your account</h2>

                        <form class="needs-validation" method="post" runat="server" asp-action="SignIn" asp-controller="SignIn" novalidate>

                            <div asp-validation-summary="All"></div>

                            <div class="form-group row mb-4">
                                <label class="col-md-2" asp-for="Name"></label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" asp-for="Name" />
                                    <small class="form-text text-muted">Allowed number of characters: 16.</small>
                                </div>
                            </div>
                            
                            <div class="form-group row mb-4">
                                <label class="col-md-2" asp-for="Password"></label>
                                <div class="col-md-6">
                                    <input type="password" id="password" asp-for="Password" class="form-control"/>
                                    <label>
                                        <input type="checkbox" id="toggle-password"/> Show/Hide Password
                                    </label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row mb-4">
                                <div class="col-md-6 offset-md-2 checkbox">
                                    <label class="pr-4 pl-0" asp-for="RememberMe">
                                        <input asp-for="RememberMe"/>
                                    </label>
                                    Remember me?
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-md-6 offset-md-2">
                                    <input type="submit" value="Sign In" class="btn btn-success" />
                                </div>
                            </div>

                            <p class="col-md-6 offset-md-4">
                                <a asp-controller="Register" asp-action="Register">Sign Up</a>
                            </p>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScripts" />
}