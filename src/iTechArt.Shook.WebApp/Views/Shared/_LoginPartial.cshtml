@inject Microsoft.AspNetCore.Identity.SignInManager<iTechArt.Shook.DomainModel.Models.User> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="LogOff" asp-controller="LogIn">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Hello, @User.Identity.Name!</li>
            <li><a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form>
}

else
{
<ul class="nav navbar-nav">

    <li>
        <a class="nav-link text-white" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
    </li>

    <li>
        <a class="nav-link text-white" id="loginLink" asp-controller="LogIn" asp-action="LogIn">Sign In</a>
    </li>

</ul>
}