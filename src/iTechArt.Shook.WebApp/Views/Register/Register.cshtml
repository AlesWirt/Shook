@model iTechArt.Shook.WebApp.ViewModels.RegisterViewModel

<div class="align-items-center h-100 pt-5">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-11 col-lg-7 col-xl-6">
                <div class="card">
                    <div class="card-body p-5">

                        <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                        <form class="needs-validation" method="post" asp-action="Register" asp-controller="Register" novalidate>
                            
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group row mb-4">
                                <label class="col-md-3" asp-for="Login"></label>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" asp-for="Login" />
                                    <small class="form-text text-muted">Allowed number of characters: 16.</small>
                                </div>
                            </div>

                            <div class="form-group row mb-4">
                                <label class="col-md-3" asp-for="Email"></label>
                                <div class="col-md-6">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row mb-4">
                                <label class="col-md-3" asp-for="Password"></label>
                                <div class="col-md-6">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row mb-4">
                                <label class="col-md-3" asp-for="ConfirmPassword"></label>
                                <div class="col-md-6">
                                    <input type="password" id="password" asp-for="ConfirmPassword" class="form-control" />
                                    <input type="checkbox" id="toggle-password" /> Show/Hide
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <input type="submit" value="Create" class="btn btn-success" />

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ShowHidePassword"/>
}