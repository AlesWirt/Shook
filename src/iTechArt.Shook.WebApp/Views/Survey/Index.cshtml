@model System.Collections.Generic.IReadOnlyCollection<iTechArt.Shook.WebApp.ViewModels.SurveyViewModel>
@inject Microsoft.AspNetCore.Identity.SignInManager<iTechArt.Shook.DomainModel.Models.User> signInManager

<div class="container text-center p-2">

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>

        @if (Model.Count > 0)
        {
            @foreach (var survey in Model)
            {
                <tr>
                    <td>@survey.Name</td>
                    <td>
                        <a>Delete</a>
                        <text> | </text>
                        <a asp-controller="Survey" asp-action="Edit" asp-route-roleId="@survey.Id">Edit</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No surveys created yet.</td>
            </tr>
        }

    </table>
</div>